{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"security": {
				"noDangerouslySetInnerHtml": "info"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noArrayIndexKey": "info",
				"noDocumentCookie": "info"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"a11y": {
				"useButtonType": "off",
				"noRedundantRoles": "warn",
				"useSemanticElements": "off",
				"useAriaPropsForRole": "info",
				"useFocusableInteractive": "info",
				"useKeyWithClickEvents": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	}
}
